<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".HairLengthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Időpontfoglalás"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/purple_500"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Kattints a hajad hosszának megfelelő képre!"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/purple_500"></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/btnShort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="left"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/short_hair" />

        <ImageButton
            android:id="@+id/btnMidium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/midium_hair" />

        <ImageButton
            android:id="@+id/btnLong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/long_hair" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnContacts"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:text="Elérhetőség"/>



        <Button
            android:id="@+id/btnAppointment"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:text="Időpontom"/>



    </LinearLayout>




</LinearLayout>